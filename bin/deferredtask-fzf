#!/usr/bin/env bash

action="$1"
usage="deferredtask-fzf [do | dismiss]"
if [ -z "$action" ]; then
    echo $usage >&2
    exit 1
fi
if [ "$action" = dismiss ]; then
    verb="Dismiss"
elif [ "$action" = do ]; then
    verb="Do"
else
    echo $usage >&2
    exit 1
fi

ids=($(deferredtask ls | fzf-tmux --prompt="[deferredtask] $verb> " --with-nth=2 -d"\t" | awk -F"\t" '{print $1}'))
for idx in ${ids[@]}; do
    if [ "$action" = do ]; then
        deferredtask do $idx
    elif [ "$action" = dismiss ]; then
        deferredtask dismiss $idx
    fi
done
